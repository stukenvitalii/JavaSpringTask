<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Консольный аппендер с цветным выводом -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования для Spring Framework - только важные сообщения -->
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>

    <!-- Уровень логирования для вашего приложения -->
    <logger name="org.example" level="INFO"/>

    <!-- Корневой логгер -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>

